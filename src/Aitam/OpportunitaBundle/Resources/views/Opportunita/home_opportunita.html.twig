{% extends 'AitamOpportunitaBundle::layout.html.twig' %}
{% block title %}Opportunita{% endblock %}
{% block body %}

<div class="center_content_pages">
        
        
        <div class="left_content">            
                        	<h2>Opportunita</h2>

     <article class="block_wide">
    {% for Opportunita in Opportunita %}
        <article class="dinuovo">
            <div class="date"><time datetime="{{ Opportunita.created|date('c') }}">{{ Opportunita.created|localizeddate() }}</time></div>
            <header>
                <h2><a href="{{ path('AitamOpportunitaBundle_opportunita_show', { 'id': Opportunita.id,'slug': Opportunita.slug }) }}">{{ Opportunita.title }}</a></h2>
            </header>

            <img src="{{ asset(['bundles/AitamOpportunita/images/', Opportunita.image]|join) }}" />
            <div class="snippet">
                <p>{{ Opportunita.articolo(250) }}.....</p>
                <p class="continue"><a href="{{ path('AitamOpportunitaBundle_opportunita_show', { 'id': Opportunita.id,'slug': Opportunita.slug  }) }}">Continua a leggere...</a></p>
            </div>

            <footer class="meta">
    <p>Commenti: <a href="{{ path('AitamOpportunitaBundle_opportunita_show', { 'id': Opportunita.id,'slug': Opportunita.slug  }) }}#comments">{{ Opportunita.commentiOpportunita|length }}</a></p>
    <p>Scritto da <span class="highlight">{{ Opportunita.author }}</span> il {{ Opportunita.created|date('h:iA') }}</p>
            </footer>
        </article>
    {% else %}
        <p>non ci sono nuove entrate</p>
    {% endfor %}
    </article>
            </div>
        </div>
            <div class="right_block">
               {% block sidebar %}
                   {{ parent() }}
               {% endblock %}    
            </div></br>
                           <div class="paginator">
        {% if paginator.currentpage != 1 %}
                <a class="previous" href="{{path('AitamOpportunitaBundle_home_Opportunita',{'page' :  paginator.currentpage-1}  ) }}"style="color:black">Indietro</a>
        {% endif %}
        {% for i in 1..paginator.numpages%}
            {% if paginator.range.0 > 2 and i == paginator.range.0 %}
                ...
            {% endif %}

            {%  if(i==1 or i==paginator.numpages or i in paginator.range) %}
                {% if i==paginator.currentpage %}
                <a class="active" href="{{ path('AitamOpportunitaBundle_home_Opportunita', {'page' : i } ) }}" style="color:red">page{{i}}|</a>
                {% else %}
                <a href="{{ path('AitamOpportunitaBundle_home_Opportunita', {'page' : i } ) }}">page{{i}}|</a> 
                {% endif %}
            {% endif %}

            {% if paginator.range[paginator.midrange -1] < paginator.numpages -1 and i == paginator.range[paginator.midrange-1] %}
                ...
            {% endif %}
        {% endfor %}
        {% if paginator.currentpage < paginator.numpages %}
                <a class="next" href="{{ path('AitamOpportunitaBundle_home_Opportunita',  {'page' : paginator.currentpage+1 } ) }}"style="color:black">Avanti</a>
        {% endif %}

